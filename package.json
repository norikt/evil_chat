{
  "name": "myapp",
  "private": true,
  "dependencies": {
    "@rails/webpacker": "^3.2.2",
    "actioncable": "^5.1.5",
    "normalize.css": "^8.0.0",
    "postcss-nested": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.6.0",
    "lint-staged": "^6.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.1.0",
    "webpack-dev-server": "^2.11.1"
  },
  "scripts": {
    "lint-staged": "$(yarn bin)/lint-staged"
  },
  "lint-staged": {
    "config/webpack/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "frontend/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "frontend/**/*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ]
}
